@page "/inventory"
@using Models

<h3>Inventory</h3>



<div class="w-100 row">


    <!-- ========= Left part ========= -->
    <div class="col-md-6">

    </div>

    <!-- ========= Right part ========= -->
    <div class="col-md-6">
        <DataGrid TItem="Item"
                  Data="@items"
                  ReadData="@OnReadData"
                  TotalItems="@totalItem"
                  PageSize="10"
                  ShowPager
                  Responsive>
            <DataGridColumn TItem="Item" Field="@nameof(Item.Id)" Caption="Image">
                <DisplayTemplate>
                    @if (!string.IsNullOrWhiteSpace(context.ImageBase64))
                    {
                        <img src="data:image/png;base64, @(context.ImageBase64)" class="img-thumbnail" title="@context.DisplayName" alt="@context.DisplayName" style="min-width: 50px; max-width: 150px" />
                    }
                    else
                    {
                        <img src="images/default.png" class="img-thumbnail" title="@context.DisplayName" alt="@context.DisplayName" style="max-width: 150px" />
                    }
                </DisplayTemplate>
            </DataGridColumn>
            <DataGridColumn TItem="Item" Field="@nameof(Item.DisplayName)" Caption="Display name" />
        </DataGrid>
    </div>



</div>


